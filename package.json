{
  "name": "electric-editing",
  "displayName": "Electric Editing",
  "description": "Editing convenience a la Emacs",
  "version": "0.0.2",
  "publisher": "oliversturm",
  "engines": {
    "vscode": "^1.17.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:electricEditing.electricBackspace",
    "onCommand:electricEditing.electricDelete"
  ],
  "main": "./extension",
  "contributes": {
    "commands": [
      {
        "command": "electricEditing.electricBackspace",
        "title": "Electric Backspace"
      },
      {
        "command": "electricEditing.electricDelete",
        "title": "Electric Delete"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Electric Editing",
      "properties": {
        "electricEditing.electricBackspace": {
          "type": "boolean",
          "default": true,
          "description": "Toggle electric backspace"
        },
        "electricEditing.electricDelete": {
          "type": "boolean",
          "default": true,
          "description": "Toggle electric delete"
        }
      }
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test",
    "novscodetest": "mocha --recursive --watch modules"
  },
  "devDependencies": {
    "typescript": "^2.5.2",
    "vscode": "^1.1.5",
    "mocha": "^3.5.0",
    "eslint": "^4.6.1",
    "@types/node": "^7.0.0",
    "@types/mocha": "^2.2.42"
  }
}
